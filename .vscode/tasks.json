{
	"version": "2.0.0",
	"tasks": [
		{
			"label": "build",
			"type": "npm",
			"script": "build",
			"group": {
				"kind": "build",
				"isDefault": true
			}
		},
		{
			"label": "watch",
			"type": "npm",
			"script": "watch",
			"isBackground": true,
			"group": "build",
			"problemMatcher": {
				"pattern": {
					"regexp": "$^"
				},
				"background": {
					"activeOnStart": false,
					"beginsPattern": "^\\[nodemon\\] starting.*$",
					"endsPattern": "^\\[nodemon\\] (clean exit|app crashed|restarting due to changes).*$"
				}
			}
		}
	]
}
