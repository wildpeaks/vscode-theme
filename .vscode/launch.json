{
	"version": "0.2.0",
	"configurations": [
		{
			"name": "Extension",
			"type": "extensionHost",
			"request": "launch",
			"runtimeExecutable": "${execPath}",
			"args": [
				// "--disable-extensions",
				"--extensionDevelopmentPath=${workspaceFolder}"
			],
			"skipFiles": ["<node_internals>/**", "node_modules/**"],
			"outFiles": ["${workspaceFolder}/out/**/*.js"],
			"preLaunchTask": "watch"
		}
	]
}
